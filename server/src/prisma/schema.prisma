generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trails {
  trail_id   Int     @id @default(autoincrement())
  trail_name String  @db.VarChar(150)
  location   String? @db.VarChar(200)

  issues   Issues[]

  @@map("trails")
}

model Users {
  user_id    Int       @id @default(autoincrement())
  username   String    @unique @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  created_at DateTime? @default(now())

  @@map("users")
}

model Parks {
  park_id   Int       @id(map: "Parks_pkey") @default(autoincrement())
  park_name String    @db.VarChar(150)
  is_active Boolean   @default(true)
  created_at DateTime @default(now())

  Issues Issues[]

  @@map("parks")
}

model Issues {
  id          Int       @id @default(autoincrement())
  park_id      Int       @db.Integer
  trail_id     Int       @db.Integer
  type        String    @db.VarChar(50)
  urgency     Int       @db.Integer // 1 = Very Low, 5 = Very High
  description String    @db.Text
  createdAt   DateTime? @default(now())

  // Foreign Key
  park  Parks  @relation(fields: [park_id], references: [park_id], onDelete: Cascade)
  trail Trails @relation(fields: [trail_id], references: [trail_id], onDelete: Cascade)

  @@map("issues")
}